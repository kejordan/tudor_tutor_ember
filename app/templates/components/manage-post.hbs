<form class="form-horizontal" {{action "submit" on="submit"}}>
  <fieldset>
    <legend>Add a New Post</legend>
    <div class="form-group">      
      {{input value=post.title id="post-title" placeholder="Post Title "}}
    </div>

    <div class="form-group">      
      {{input value=post.postContent id="post-content" placeholder="Post Content "}}
    </div>


    <div class="form-group">
      <div class="col-lg-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </fieldset>
</form>