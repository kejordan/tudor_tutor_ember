<form class="form-horizontal" {{action "submit" on="submit"}}>
  <fieldset>
    <legend>Add a New Program</legend>
    <div class="form-group">
      <label for="program-title" class="form-control col-lg-10">
      {{input value=program.title id="program-title" placeholder="Enter Program Title Here"}}</label>
    </div>

    <div class="form-group">
      <div class="col-lg-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </fieldset>
</form>